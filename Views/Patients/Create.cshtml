@model HealthCare.Models.Patient

<form asp-action="Create" method="post">

    <!-- PatientId (usually auto-generated by the database, so often hidden or not displayed) -->
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <!-- FirstName -->
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <!-- LastName -->
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- Gender -->
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <!-- DOB -->
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control" type="date" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <!-- AddressLine1 -->
    <div class="form-group">
        <label asp-for="AddressLine1"></label>
        <input asp-for="AddressLine1" class="form-control" />
        <span asp-validation-for="AddressLine1" class="text-danger"></span>
    </div>

    <!-- AddressLine2 -->
    <div class="form-group">
        <label asp-for="AddressLine2"></label>
        <input asp-for="AddressLine2" class="form-control" />
        <span asp-validation-for="AddressLine2" class="text-danger"></span>
    </div>

    <!-- City -->
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <!-- PostCode -->
    <div class="form-group">
        <label asp-for="PostCode"></label>
        <input asp-for="PostCode" class="form-control" />
        <span asp-validation-for="PostCode" class="text-danger"></span>
    </div>

    <!-- CreatedDate (Often set automatically, consider making read-only) -->
    <div class="form-group">
        <label asp-for="CreatedDate"></label>
        <input asp-for="CreatedDate" class="form-control" type="datetime-local" readonly />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <!-- ModifiedDate (Often set automatically, consider making read-only) -->
    <div class="form-group">
        <label asp-for="ModifiedDate"></label>
        <input asp-for="ModifiedDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="ModifiedDate" class="text-danger"></span>
    </div>

    <!-- Consultations (Navigation property) -->
    <!-- Typically, you wouldn't edit this directly. This is a collection of related entities.
         Consider removing this from the form or showing related consultations elsewhere. -->
    <div class="form-group">
        <label asp-for="Consultations"></label>
        <input asp-for="Consultations" class="form-control" />
        <span asp-validation-for="Consultations" class="text-danger"></span>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
</form>
